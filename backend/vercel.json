{
    "version": 2,
    "builds": [
        {
            "src": "main.py",
            "use": "@vercel/python@3.1.30",
            "config": {
                "maxLambdaSize": "15mb",
                "runtime": "python3.10",
                "installCommand": "python -m pip install --upgrade pip && pip install -r requirements.txt --no-cache-dir && pip install -e meridian/ --no-cache-dir"
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "main.py"
        }
    ],
    "env": {
        "PYTHON_VERSION": "3.10",
        "PYTHONPATH": ".",
        "ALLOWED_ORIGINS": "https://your-frontend-url.vercel.app,http://localhost:3000"
    }
}
