{
    "version": 2,
    "builds": [
        {
            "src": "main.py",
            "use": "@vercel/python",
            "config": {
                "installCommand": "pip install -r requirements.txt && cd meridian && pip install -e ."
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "main.py"
        }
    ],
    "env": {
        "PYTHONPATH": ".",
        "ALLOWED_ORIGINS": "https://your-frontend-url.vercel.app,http://localhost:3000"
    }
}
