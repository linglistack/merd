{
    "version": 2,
    "builds": [
        {
            "src": "main.py",
            "use": "@vercel/python",
            "config": {
                "runtime": "python3.12",
                "maxLambdaSize": "15mb",
                "buildCommand": "pip install --no-cache-dir -r requirements.txt && cd meridian && pip install --no-cache-dir -e ."
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "main.py"
        }
    ],
    "env": {
        "PYTHONPATH": ".",
        "ALLOWED_ORIGINS": "https://your-frontend-url.vercel.app,http://localhost:3000",
        "PIP_NO_DEPS": "false",
        "PIP_DEFAULT_TIMEOUT": "100"
    }
}
