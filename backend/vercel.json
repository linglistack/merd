{
    "version": 2,
    "builds": [
        {
            "src": "main.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "15mb",
                "runtime": "python3.10"
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "main.py"
        }
    ],
    "env": {
        "PYTHON_VERSION": "3.10",
        "PYTHONPATH": "."
    },
    "buildCommand": "pip install -r requirements.txt && pip install -e meridian/"
}
